@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Stock</title>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendo.default.min.css" rel="stylesheet" />
    <link href="~/Content/examples.css" rel="stylesheet" />
    <script src="~/Scripts/kendo.dataviz.min.js"></script>
</head>
    <body>
        
        
        <div class="container-fluid">
            <div class="row-fluid">
                <h1>Do Stock Prices Follow Benford's Law?</h1>
                <div id="example" class="k-content">
                    <div class="chart-wrapper">
                        <div id="chart" style="background: center no-repeat url('content/images/world-map.png');"></div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            function createChart() {
                $("#chart").kendoChart({
                    dataSource: {
                        transport: {
                            read: {
                                url: "Home/GetStocksData?sheet=stock prices&xcolumn=B&ycolumn=C",
                                dataType: "json"
                            }
                        },
                        sort: {
                            field: "x",
                            dir: "asc"
                        }
                    },
                    title: {
                        text: "Stock Prices"
                    },
                    legend: {
                        position: "top"
                    },
                    seriesDefaults: {
                        type: "column"
                    },
                    series: [{
                        name: "Value",
                        field: "y"
                    }],
                    valueAxis: {
                        labels: {
                            format: "{0}%"
                        },
                        line: {
                            visible: false
                        },
                        axisCrossingValue: 0
                    },
                    categoryAxis: {
                        field: "x",
                        line: {
                            visible: false
                        },
                        labels: {
                     
                        }
                    },
                    tooltip: {
                        visible: true,
                        format: "{0}%",
                        template: "#= series.name #: #= value #"
                    }
                });
            }

            $(document).ready(function () {
                setTimeout(function () {
                    // Initialize the chart with a delay to make sure the initial animation is visible
                    createChart();
                }, 400);
            });
        </script>
    </body>
</html>
